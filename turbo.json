{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "env": ["VITE_CONVEX_URL"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["VITE_CONVEX_URL"]
    },
    "preview": {
      "persistent": true,
      "cache": false,
      "env": ["VITE_CONVEX_URL"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
