{
  "name": "@b/properties",
  "version": "0.1.0",
  "description": "Property-level CSS schemas and parsers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@b/generators": "workspace:*",
    "@b/keywords": "workspace:*",
    "@b/parsers": "workspace:*",
    "@b/types": "workspace:*",
    "@types/css-tree": "catalog:",
    "css-tree": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@b/typescript-config": "workspace:*",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
