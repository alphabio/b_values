{
  "name": "@b/declarations",
  "version": "0.1.0",
  "description": "CSS declaration schemas and parsers",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@b/generators": "workspace:*",
    "@b/keywords": "workspace:*",
    "@b/parsers": "workspace:*",
    "@b/types": "workspace:*",
    "@types/css-tree": "catalog:",
    "css-tree": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@b/typescript-config": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
