{
  "name": "@b/values",
  "version": "0.1.0",
  "description": "World-class CSS Values â†” IR library with strongly-typed Zod schemas",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@b/generators": "workspace:*",
    "@b/keywords": "workspace:*",
    "@b/parsers": "workspace:*",
    "@b/properties": "workspace:*",
    "@b/types": "workspace:*",
    "@b/units": "workspace:*"
  },
  "devDependencies": {
    "@b/typescript-config": "workspace:*",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "css",
    "parser",
    "css-parser",
    "css-values",
    "gradient",
    "color",
    "length",
    "ir",
    "intermediate-representation",
    "typescript",
    "type-safe",
    "zod",
    "bidirectional"
  ]
}
