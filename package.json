{
  "name": "@b_templates/b_values",
  "version": "1.0.0",
  "description": "Alphab Monorepo - Multi-project workspace with shared packages",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "generate:definitions": "npx tsx scripts/generate-property-definitions.ts",
    "scaffold:property": "npx tsx scripts/scaffold-property.ts",
    "clean": "rimraf dist node_modules pnpm-lock.yaml",
    "clean:all": "pnpm -r exec rimraf dist node_modules pnpm-lock.yaml && pnpm run clean",
    "preinstall": "pnpx only-allow pnpm",
    "start": "node scripts/start.js",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "pnpm run lint:md && biome lint --write --reporter=summary .",
    "lint:md": "markdownlint-cli2 --fix '**/*.md'",
    "format": "pnpm run format:md && biome format --write . && biome check --write .",
    "format:md": "prettier --write '**/*.md' --log-level=silent",
    "check": "pnpm generate:definitions && pnpm format && pnpm lint && pnpm typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "commit": "git-cz",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:version && pnpm install && pnpm changeset:publish"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tanstack/react-router-devtools": "catalog:",
    "@tanstack/router-plugin": "^1.136.4",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.10.1",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "dotenv-cli": "^11.0.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "lefthook": "^2.0.4",
    "markdownlint-cli2": "^0.19.0",
    "markdownlint-cli2-formatter-pretty": "^0.0.9",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-glsl": "^1.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.9",
    "web-vitals": "^5.1.0"
  }
}
